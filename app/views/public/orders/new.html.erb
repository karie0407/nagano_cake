<h4>注文情報入力</h4>
<strong>支払い方法</strong>
<%= form_with model:@order, url:orders_confirm_path, method: :post do |f| %>
<ul>
<li>
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
<div class="bullet">
 <div class="line zero"></div>
 <div class="line one"></div>
 <div class="line two"></div>
 <div class="line three"></div>
 <div class="line four"></div>
 <div class="line five"></div>
 <div class="line six"></div>
 <div class="line seven"></div>
</div>
</li>
<li>
<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
<div class="bullet">
 <div class="line zero"></div>
 <div class="line one"></div>
 <div class="line two"></div>
 <div class="line three"></div>
 <div class="line four"></div>
 <div class="line five"></div>
 <div class="line six"></div>
 <div class="line seven"></div>
</div>
</li>
</ul>

<strong>お届け先</strong>
<ul>
<li>
  <%= f.radio_button :select_address, 0, checked: true %>
  <%= f.label "ご自身の住所" %>
 <div class="bullet">
 <div class="line zero"></div>
 <div class="line one"></div>
 <div class="line two"></div>
 <div class="line three"></div>
 <div class="line four"></div>
 <div class="line five"></div>
 <div class="line six"></div>
 <div class="line seven"></div>
</div>
</li>
<li>
 <%= current_customer.address %>
 </li>
 <li>
 <%= current_customer.full_name %>
</li>
</ul>
<% if current_customer.addresses.exists? %>
<ul>
 <li>
<%=f.radio_button :select_address,1 %>
<%= f.label "登録住所から選択" %>
　<div class="bullet">
   <div class="line zero"></div>
   <div class="line one"></div>
   <div class="line two"></div>
   <div class="line three"></div>
   <div class="line four"></div>
   <div class="line five"></div>
   <div class="line six"></div>
   <div class="line seven"></div>
  </div>
</li>
</ul>
<div class="row">
 <div class="col-md-12 ml-3">
   <div class="selectdiv ml-4">
<%= f.select :address_id, options_from_collection_for_select(Address.all,:id,:address_display) %>
   </div>
 </div>
</div>
<% end %>
<div class="row">
 <div class="col-md-4">
  <div class="continput">
   <ul>
    <li>
     <%= f.radio_button :select_address,2 %>
     <%= f.label "新しいお届け先" %>
     　<div class="bullet">
        <div class="line zero"></div>
        <div class="line one"></div>
        <div class="line two"></div>
        <div class="line three"></div>
        <div class="line four"></div>
        <div class="line five"></div>
        <div class="line six"></div>
        <div class="line seven"></div>
       </div>
    </li>
   </ul>
  </div>
 </div>
</div>
<div class="row">
 <div class="col-md-12 ml-3 mt-3">
  <div class="form-group row ml-1">
   <%= f.label "郵便番号（ハイフンなし）" %>
   <%= f.text_field :address, :placeholder =>"0000", class: "form-control col-md-3" %>
  </div>
  <div class="form-group row ml-1">
   <%= f.label "住所" %>
   <%= f.text_field :address, :placeholder =>"東京都", class: "form-control col-md-7" %>
  </div>
  <div class="form-group row ml-1">
   <%= f.label "宛名" %>
   <%= f.text_field :name, :placeholder => "令和理子", class: "form-control col-md-3" %>
  </div>
  <div class="form-group row">
   <%= f.submit "確認画面へ進む", class: "btn btn-next btn-lg mt-2 col-md-2 offset-md-5" %>
  </div>
 </div>
</div>

<% end %>

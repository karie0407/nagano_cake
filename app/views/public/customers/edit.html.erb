<div class="container">
  <div class="row">
   <div class="col-md-8 mt-5">
   <h4 class="col-md-6"><span class="title">会員情報編集</span></h4>
   </div>
  </div>

 <div class="row ml-2">
   <div class="mx-auto col-md-12 mt-3">
   <%= form_with model: @customer,url: customers_information_path, method: :patch do |f| %>
   <div class="form-group">
   <%= f.label "氏名", class: "col-sm-3 col-form-label" %>
   <%= f.text_field :last_name,autofocus: true %>
   <%= f.text_field :first_name,autofocus: true %>
   </div>
   <div class="form-group">
   <%= f.label "フリガナ", class: "col-sm-3 col-form-label" %>
   <%= f.text_field :last_name_kana,autofocus: true %>
   <%= f.text_field :first_name_kana,autofocus: true %>
   </div>
   <div class="form-group">
    <%= f.label "郵便番号",  class: "col-sm-3 col-form-label" %>
    <%= f.text_field :postal_code,autofocus: true %>
    </div>
    <div class="form-group">
    <%= f.label"住所", class: "col-sm-3 col-form-label" %>
    <%= f.text_field :address,autofocus: true %>
    </div>
    <div class="form-group">
    <%= f.label "電話番号", class: "col-sm-3 col-form-label" %>
     <%= f.text_field :telephone_number,autofocus: true %>
    <div class="form-group">
    <%= f.label "メールアドレス", class: "col-sm-3 col-form-label" %>
    <%= f.text_field :email,autofocus: true %>
    </div>
    <div class="action">
     <%=f.submit "変更内容を保存", class:"btn btn-success col-sm-3 offset-sm-3 mr-5" %>
     <%= link_to "退会する", customers_unsubscribe_path, class:"btn btn-danger" %>
     </div>
<% end %>
</div>
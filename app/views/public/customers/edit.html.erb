<h4 class="text-center">会員情報編集</h4>

<%= form_with model: @customer,url: customers_information_path, method: :patch do |f| %>

<%= f.label "氏名", class: "col-sm-3 col-form-label" %>
<%= f.text_field :last_name %>
<%= f.text_field :first_name %>

<%= f.label "フリガナ", class: "col-sm-3 col-form-label" %>
<%= f.text_field :last_name_kana %>
<%= f.text_field :first_name_kana %>
<!--郵便番号-->
<%= f.label "郵便番号",  class: "col-sm-3 col-form-label" %>
<%= f.text_field :postal_code %>
<!--住所-->
<%= f.label"住所", class: "col-sm-3 col-form-label" %>
<%= f.text_field :address %>
<!--電話番号-->
<%= f.label "電話番号", class: "col-sm-3 col-form-label" %>
<%= f.text_field :telephone_number %>
<!--メールアドレス-->
<%= f.label "メールアドレス", class: "col-sm-3 col-form-label" %>
<%= f.text_field :email %>

<%=f.submit "変更内容を保存" %>
退会する

<% end %>
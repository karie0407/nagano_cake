<div class="container">
 <div class="row">
   <div class="col-md-8 mt-5">
  　<span class="title"><h4>新規会員登録</h4></span>
   </div>
   <div class="row">
    <div class='mx-auto col-md-12 mt-3'>
   <%= form_with model: @customer, url:customer_registration_path do |f| %>
   <%= render "public/shared/error_messages", resource: resource %>
   <div class="form-group row">
  <%= f.label "名前", class: "col-md-3 col-form-label col-sm-3" %>
   <%= f.label :"(姓)" ,class: "col-form-label col-sm-3" %>
   <%= f.text_field :last_name, autofocus: true, :placeholder => "令和", class: "form-control col-sm-6" %>
   </div>
  <div class="field">
  <%= f.label :"(セイ)" %>
  <%= f.text_field :last_name_kana %>
</div>
<div class="field">
  <%= f.label :"(名)" %>
  <%= f.text_field :first_name %>
</div>
<div class="field">
  <%= f.label :"(メイ)" %>
  <%= f.text_field :first_name_kana %>
</div>
  <div class="field">
    <%= f.label :email,"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :postal_code,"郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <%= f.label :address,"住所" %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :telephone_number,"電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>
  <div class="field">
    <%= f.label :password,"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation,"パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
  </div>
<% end %>
</div>

<%= render "public/shared/links" %>
 </div>
</div>
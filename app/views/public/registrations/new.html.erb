<div class="container">
 <div class="row">
   <div class="col-md-8 mt-5">
  　<h4 class="col-md-6"><span class="title">新規会員登録</span></h4>
   </div>
  </div>
  <div class="row">
  <div class='mx-auto col-md-12 mt-3'>
    <%= form_with model: @customer, url:customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
   <div class="form-group row">
   <%= f.label "名前", class: "col-md-3 col-form-label" %>
   <%= f.label :last_name,"(姓)" ,class: "col-form-label col-sm-1" %>
   <%= f.text_field :last_name, autofocus: true, :placeholder => "令和", class: "form-control col-sm-3" %>
  <%= f.label :first_name,"(名)", class: "col-form-label col-sm-1" %>
  <%= f.text_field :first_name, autofocus: true, :placeholder => "道子", class: "form-cotrol col-sm-3" %>
   </div>
  <div class="form-group row">
  　<%= f.label "フリガナ", class: "col-md-3 col-form-label" %>
  　<%= f.label :last_name_kana,"(セイ)", class: "col-form-label col-sm-1" %>
  　<%= f.text_field :last_name_kana, autofocus: true, :placeholder => "レイワ",class: "form-control col-sm-3" %>
  　<%= f.label :first_name_kana,"(メイ)", class: "col-form-label col-sm-1" %>
  　<%= f.text_field :first_name_kana, autofocus: true, :placeholder => "ミチコ", class: "form-control col-sm-3" %>
　</div>
  <div class="form-group row">
    <%= f.label :email,"メールアドレス",class: "col-md-3 col-form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-3" %>
  </div>
  <div class="form-group row">
    <%= f.label :postal_code,"郵便番号",class: "col-md-3 col-form-label" %>
    <%= f.text_field :postal_code,autofocus: true, :placeholder => "0000000", class: "form-control col-md-3" %>
  </div>
  <div class="form-group row">
    <%= f.label :address,"住所", class: "col-md-4 col-form-label" %>
    <%= f.text_field :address, autofocus: true, :placeholder => "東京都渋谷区代々木神園町0-0", class: "form-control col-md-7" %>
  </div>
  <div class="form-group row">
    <%= f.label :telephone_number,"電話番号(ハイフンなし)",class: "col-md-4 col-form-label" %>
    <%= f.text_field :telephone_number, autofocus: true,  :placeholder => "1234567890", class: "form-control col-md-3" %>
  </div>
  <div class="form-group row">
    <%= f.label :password,"パスワード(６文字以上)",class: "col-md-4 col-form-label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-md-3" %>
  </div>
  <div class="form-group row">
    <%= f.label :password_confirmation,"パスワード（確認用）",class: "col-md-4 col-form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control col-md-3" %>
  </div>
  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success col-md-3 offset-md-4 mt-3" %>
  </div>
  <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-8 mt-3">
    <h5 class="col-md-6"><span class="title">既に登録済みの方</span></h5>
    <%= link_to "こちら",new_customer_session_path %>からログインしてください。
  </div>
</div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 ml-5 mt-5">
    <h4>配送先編集</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 ml-5 mt-3">
    <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
    <div class="form-group">
    <%= f.label :postal_code,"郵便番号",class: "col-md-2 col-form-label" %>
    <%= f.text_field :postal_code %>
    </div>
    <div class="form-group">
     <%= f.label :address,"住所",class: "col-md-2 col-form-label" %>
    <%= f.text_field :address %>
    </div>
    <div class="form-group">
    <%= f.label :name,"宛名",class: "col-md-2 col-form-label" %>
    <%= f.text_field :name %>
    </div>
    <%= f.submit "変更内容を保存", class: "btn btn-success col-md-2 offset-md-3 mt-1 mb-1" %>
     <% end %>
    </div>
  </div>
</div>
<h4>配送先登録/一覧</h4>
<%= form_with model: @address, url: addresses_path, method: :post do |f| %>
<div class="row">
<%= f.label "郵便番号（ハイフンなし）", class: "col-md-2 col-form-label" %>
<%= f.text_field :postal_code %>
</div>
<div class="row">
<%= f.label "住所", class: "col-md-2 col-form-label" %>
<%= f.text_field :address %>
</div>
<div class="row">
<%= f.label "宛名", class: "col-md-2 col-form-label" %>
  <%= f.text_field :name %>
</div>
<%= f.submit "新規登録", class: "btn col-xs-5 btn-success" %>
<% end %>

<% @addresses.each do |address| %>
<div class="row">
  <div class="col-xs-8">
    <table>
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th>    </th>
        </tr>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する",edit_address_path(address.id) %></td>
          <td>削除するボタン</td>
        </tr>
      </thead>
    </table>
  </div>
</div>
<% end %>
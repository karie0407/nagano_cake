<div class="container">
 <div class="row">
  <h4 class="title mt-5">商品編集</h4>
 </div>
 <div class="row">
  <div class="mx-auto col-md-12 mt-3 item-form">
  <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>

  <div class="form-group">
   <%= f.label :image, "商品画像" %>
   <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
   <%= f.label :name,"商品名" %>
   <%= f.text_field :name, :placeholder =>"商品名" %>
  </div>
  <div class="form-group">
  <%= f.label :introduction,"商品説明" %>
  <%= f.text_area :introduction, :placeholder =>"説明を記入します" %>
  </div>
  <div class="form-group">
  <%= f.label :genre_id,"ジャンル" %>
  <%=f.select :genre_id,options_from_collection_for_select(Genre.all,:id, :name), include_blank: "選択して下さい" %>
  </div>
  <div class="form-group">
  <%= f.label :price,"税抜価格" %>
  <%= f.text_field :price %>円
  </div>
  <div class="form-group">
   <%= f.label :is_active,"販売ステータス" %>
   <%= f.radio_button :is_active,"sale" %>
   <%= f.label :is_active, "販売中" %>
   <%= f.radio_button :is_active, "stopselling" %>
   <%= f.label :is_active, "販売停止中" %>
   </div>
 <%= f.submit '変更を保存', class:"btn btn-success pull-right" %>
 <% end %>
  </div>
 </div>
</div>
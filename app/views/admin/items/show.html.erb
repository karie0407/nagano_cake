<div class="container">
<h3><strong>商品詳細</strong></h3>
<div class="row">
  <div class="col-md-3 text-center">
  <%= image_tag @item.get_image(200,200) %>
  </div>
  <div class="col-lg-8 offset-md-1">
    <table class="table table-borderless">
      <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
      </tr>
      <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
      </tr>
      <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
      </tr>
      <tr>
      <td>税込価格（税抜価格）</td>
      <td><%= (@item.price * 1.1).floor %>(<%=  @item.price %>)円</td>
      </tr>
      <tr>
      <td>販売ステータス</td>
      <td><%=@item.is_active_i18n %></td>
      </tr>
    </table>
<%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-action btn-lg text-center mb-5" %>
  </div>
 </div>
</div>

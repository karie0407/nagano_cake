<div class="container">
<div class="row">
  <h3>商品一覧</h3>
  <div class="ml-auto add-product-btn mt-5">
    <%= link_to "+", new_admin_item_path,class: "btn btn-primary btn-circle pull-right" %>
  </div>
</div>
<div class="row">
   <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
       <% @items.each do |item| %>
      <tr>
　　　 <td><%= item.id %></td>
       <td><%= link_to item.name, admin_item_path(item.id),class: "link_text link_border" %></td>
        <td><%= item.price %>円</td>
        <td><%= item.genre.name %></td>
        <td><%= item.is_active_i18n %></td>
     <% end %>
   </tbody>
   </table>
   <%= paginate @items %>
</div>
</div>
<div class="container">
  <div class="row">
      <h4><span class="title">注文履歴一覧</span></h4>
  </div>
    <div class="row">
    <table class="table">
      <thead>
        <tr>
       <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
        </tr>
      </thead>
       <tbody>
       <% @orders.each do |order| %>
       <tr>
        <td><%=link_to order.created_at,admin_order_path(order), class: "link_text link_border" %></td>
        <td> <%= order.name %></td>
        <td><%= order.total_amount %></td>
        <td><%= order.status_i18n %></td>
        </tr>
        <% end %>
       </tbody>
     </table>
     <%= paginate @orders %>
    </div>
</div>